@model Item

<h3 class="my-5">
    @Model.Name
</h3>

<div class="row gx-5">
    <!-- left: image, right: description and price -->
    <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid col-5" />
    <div class="col-7">
        <h5>@Model.Description</h5>
        <h3 class="pull-right">@Model.Price.ToString("0.00 NOK")</h3>
        <p><a href="/Item/Table">Back to Table View</a></p>
        <p><a href="/Item/Grid">Back to Grid View</a></p>
    </div>
</div>